container: "radio"
builder:
  title: "Radios"
  cls: this["Radio"]
  rows: 2
  cols: 3
  tableClass: "demo-table"
  columnHeaders: (opts)-> [ "Normal", "Readonly", "Disabled" ][opts.col]
  rowHeaders: (opts)-> [ "Normal", "Checked" ][opts.row]
  cells: (opts)->
    states = [ null, "readonly", "disabled" ]
    checked = [ null, "checked" ]
    opts.widget.set checked[ opts.row ], true if checked[ opts.row ]?
    opts.widget.set states[ opts.col ], true if states[ opts.col ]?
