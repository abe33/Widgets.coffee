container: "textinputs"
builder:
  title: "TextInputs"
  cls: this["TextInput"]
  rows: 1
  cols: 3
  tableClass: "float dummy"
  cells: (opts)->
    states = [null, "readonly", "disabled"]
    prefixes = ["a","b","c"]
    opts.widget.addClasses prefixes[opts.col]
    opts.widget.set "value", states[opts.col] or "normal"
    opts.widget.set states[opts.col], true if states[opts.col]?
  columnHeaders: (opts)->
    ["Normal", "Readonly", "Disabled"][opts.col]
