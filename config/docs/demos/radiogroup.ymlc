container: "radio"
builder:
  title: "RadioGroup"
  cls: this["Radio"]
  rows: 1
  cols: 4
  tableClass: "demo-table"
  cells: (opts)->
    @group = new RadioGroup unless @group?
    @group.add opts.widget

    opts.td.css "text-align", "center"
    if opts.col is 3
      opts.widget.set
        checked: true
        disabled: true
